{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/",
        "function": "index"
      },
      {
        "source": "/api/events",
        "function": "getEvents"
      },
      {
        "source": "/api/versions",
        "function": "getVersions"
      },
      {
        "source": "/api/update/events",
        "function": "updateEvents"
      },
      {
        "source": "/api/update/versions",
        "function": "updateVersions"
      },
      {
        "source": "/api/update/metadata",
        "function": "updateBandMetadata"
      }
    ]
  },
  "functions": {
    "predeploy": [
      "npm test"
    ]
  }
}
