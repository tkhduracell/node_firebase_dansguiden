{
  "hosting": {
    "public": "web/public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/",
        "destination": "index.html"
      },
      {
        "source": "/api/events",
        "function": "eventsFetch"
      },
      {
        "source": "/api/versions",
        "function": "versionsFetch"
      },
      {
        "source": "/api/images",
        "function": "imagesFetch"
      },
      {
        "source": "/api/update/events",
        "function": "eventsUpdate"
      },
      {
        "source": "/api/update/versions",
        "function": "versionsUpdate"
      },
      {
        "source": "/api/update/metadata",
        "function": "metadataUpdate"
      },
      {
        "source": "/api/update/bands",
        "function": "bandsUpdate"
      }
    ]
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint:ts",
      "npm --prefix \"$RESOURCE_DIR\" run test:ts",
      "npm --prefix \"$RESOURCE_DIR\" run build:ts"
    ],
    "source": "functions"
  }
}
