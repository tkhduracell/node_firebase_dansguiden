{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ESNext",
    "lib": [
      "ES2019",
      "ES2020",
      "ESNext",
      "DOM"
    ],
    "outDir": "build",
    "sourceMap": true,
    "esModuleInterop": true,
    "typeRoots": [
      "../node_modules/@types",
      "node_modules/@types",
      "lib/@types"
    ],
    "strict": true,
    "noUnusedLocals": true,
  },
  "compileOnSave": true,
  "include": [
    "src/**/*",
    "test/**/*",
    "lib/**/*",
    "debug/**/*",
    "scripts/**/*"
  ]
}
