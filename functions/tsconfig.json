{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2018",
    "lib": [
      "ES2019"
    ],
    "outDir": "build",
    "sourceMap": true,
    "esModuleInterop": true,
    "typeRoots": [
      "node_modules/@types",
      "lib/types"
    ],
    "strict": true,
    "noUnusedLocals": true,
  },
  "compileOnSave": true,
  "include": [
    "src/**/*"
  ]
}
