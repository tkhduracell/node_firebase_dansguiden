{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2018",
    "lib": [
      "ES2019"
    ],
    "outDir": "build",
    "sourceMap": true,
    "allowJs": true,
    "esModuleInterop": true,
    "typeRoots": [
      "node_modules/@types",
      "lib/types"
    ],
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
  },
  "compileOnSave": true,
  "include": [
    "src/**/*",
    "test/**/*",
    "debug/**/*"
  ],
  "exclude": [
    "node_modules/**/*",
    "build/**/*"
  ]
}
